<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="org.tym.bugpred.mybatis.bean.Commit" alias="Commit" />
		<typeAlias type="org.tym.bugpred.mybatis.bean.FileOp" alias="FileOp" />
	</typeAliases>
	<!--数据源配置 使用mysql数据库 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="jdbc" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://127.0.0.1:3306/graduate?useSSL=false" />
				<property name="username" value="root" />
				<property name="password" value="cscs" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!--*Mapper.xml装载进来 同等于把“dao”的实现装载进来 -->
		<mapper resource="mappers/CommitMapper.xml" />
		<mapper resource="mappers/FileOpMapper.xml" />
	</mappers>
</configuration>