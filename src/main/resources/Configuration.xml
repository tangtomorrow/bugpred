<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- properties标签不放在第一个就会报错。。 -->
	<properties resource="jdbc.properties" />
	
	<typeAliases>
		<typeAlias type="org.tym.bugpred.mybatis.bean.Commit" alias="Commit" />
		<typeAlias type="org.tym.bugpred.mybatis.bean.FileOp" alias="FileOp" />
	</typeAliases>

	<!--数据源配置 使用mysql数据库 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="jdbc" />
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driver}" />
				<property name="url" value="${jdbc.url}" />
				<property name="username" value="${jdbc.username}" />
				<property name="password" value="${jdbc.password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!--*Mapper.xml装载进来 同等于把“dao”的实现装载进来 -->
		<!-- -->
		<mapper resource="mappers/CommitMapper.xml" />
		<mapper resource="mappers/FileOpMapper.xml" />

		<!-- <mapper resource="mappers/CommitMapper2.xml" /> -->

		<!-- 批量加载mappers -->
		<!-- <package name=".mappers"/> -->
	</mappers>
</configuration>